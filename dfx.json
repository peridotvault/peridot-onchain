      "main": "src/peridot_onchain_backend/registry/main.mo",
      "type": "motoko",
      "moc": {
        "args": [
          "--enhanced-orthogonal-persistence"
        ]
      }
    },
    "peridot_factory": {
      "main": "src/peridot_onchain_backend/factory/main.mo",
